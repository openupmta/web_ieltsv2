@model PagedList.IPagedList<coderush.Areas.Admins.Models.EF.ViewModel.CourseViewModel>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Bảng dữ liêu
            <small>Danh sách khóa học</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Data tables</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Danh sách nhân viên </h3>
                        <button type="button" class="btn btn-warning" style="float:right">
                            @Html.ActionLink("Thêm khóa học ", "Create", "Course")
                        </button>

                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        @using (Html.BeginForm("Index", "Course", FormMethod.Get))
                        {
                            <input type="text" name="search" placeholder="Search..." />
                            <input type="submit" name="submit" value="Search" />
                        }

                        <table id="example1" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        Giảng Viên
                                    </th>
                                    <th>
                                        Khóa Học
                                    </th>
                                    <th>
                                        Nội Dung
                                    </th>
                                    <th>
                                        Trạng Thái
                                    </th>
                                    <th>
                                        Hình ảnh
                                    </th>
                                    <th>
                                        Giá
                                    </th>
                                    <th>
                                        Ngày tạo
                                    </th>

                                    <th>
                                        Hành động
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.teacher_name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.co_name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.co_content)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.co_status)
                                    </td>
                                    <td><img height="50px" src="~/Areas/Admins/Content/Photo/Course/@item.co_image" /></td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.co_price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.co_created_at)
                                    </td>
                                    <td>

                                        <a href="@Url.Action("Edit","Course", new { id = item.co_id }) ">
                                            <span class="glyphicon glyphicon-edit">
                                            </span>
                                        </a>
                                         | 
                                        <a href="@Url.Action("Delete","Course",new { id = item.co_id })" onclick="return confirm('Bạn chắc chắn muốn xóa?')">
                                            <span class="glyphicon glyphicon-trash"></span>
                                        </a>
                                            
                                    </td>
                                </tr>
                                }
                            </tbody>

                        </table>
                        <div class="col-sm-7">
                            <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">
                                @Html.PagedListPager(Model, PageNum => Url.Action("Index", new { PageNum, search = Request.QueryString["search"] }))
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section Styles{
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Content/adminlte/components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/adminlte/components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Content/adminlte/components/Ionicons/css/ionicons.min.css">
