@using Microsoft.AspNet.Identity;
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/Content/adminlte/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>@User.Identity.GetUserName()</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        <!-- search form -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">MAIN NAVIGATION</li>
            <li class="@Html.IsSelected(controller: "Dashboard") treeview">
                <a href="#">
                    <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li class="@Html.IsSelected(controller: "Dashboard", action: "Dashboardv1")"><a href="@lte.MVC.Pages.Dashbaordv1.Url"><i class="fa fa-circle-o"></i> Dashboard v1</a></li>
                    <li class="@Html.IsSelected(controller: "Dashboard", action: "Dashboardv2")"><a href="@lte.MVC.Pages.Dashbaordv2.Url"><i class="fa fa-circle-o"></i> Dashboard v2</a></li>
                </ul>
            </li>
            <li class="@Html.IsSelected(controller: "Staff") treeview">
                <a href="#">
                    <i class="fa fa-dashboard"></i> <span>Quản lý nhân sự</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li class="@Html.IsSelected(controller: "Staffs", action: "Index")"><a href="@lte.MVC.Pages.Staffs.Index"><i class="fa fa-circle-o"></i> Danh sách</a></li>
                   
                </ul>
            </li>
        </ul>

    </section>
    <!-- /.sidebar -->
</aside>