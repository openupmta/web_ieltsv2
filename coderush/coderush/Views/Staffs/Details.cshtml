@model coderush.Models.staff

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Chi tiết nhóm quyền
            <small>Nhóm quyền</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Forms</a></li>
            <li class="active">General Elements</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title" style="font-weight:100">Chi tiết nhóm</h3>
                        <div style="float:right">
                            <button type="button" class="btn btn-warning">
                                @Html.ActionLink("Edit", "Edit", new { id = Model.sta_id })
                            </button>
                            <button type="button" class="btn btn-warning" style="margin-right: auto">
                                @Html.ActionLink("Back to List", "Index")
                            </button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <dl class="dl-horizontal">
                            <dt>
                                Nhóm quyền
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.group_role.gr_name)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.sta_email)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.sta_email)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.sta_fullname)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.sta_fullname)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.sta_username)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.sta_username)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.sta_password)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.sta_password)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.sta_image)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.sta_image)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.sta_created_at)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.sta_created_at)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.sta_update_at)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.sta_update_at)
                            </dd>


                        </dl>
                    </div>

                    <!-- /.box-body -->

                </div>
                <!-- /.box -->

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
